{
  "manifest_version": 2,
  "name": "Salty Bet Bot",
  "description": "This extension automatically bets on saltybet.com",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": [
      "http://www.saltybet.com/",
      "https://www.saltybet.com/"
    ],
    "js": [
      "saltybet.js"
    ],
    "run_at": "document_end",
    "all_frames": false
  }, {
    "matches": [
      "http://www.twitch.tv/saltybet/chat",
      "https://www.twitch.tv/saltybet/chat"
    ],
    "js": [
      "twitch_chat.js"
    ],
    "run_at": "document_end",
    "all_frames": false
  }]
}
