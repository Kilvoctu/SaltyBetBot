{
  "manifest_version": 2,
  "name": "Salty Bet Bot",
  "description": "This extension automatically bets on saltybet.com",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "downloads"
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": [
      "http://www.saltybet.com/",
      "https://www.saltybet.com/",
      "http://mugen.saltybet.com/",
      "https://mugen.saltybet.com/",
      "http://live.saltybet.com/",
      "https://live.saltybet.com/"
    ],
    "js": [
      "js/saltybet.js"
    ],
    "run_at": "document_start",
    "all_frames": false
  }, {
    "matches": [
      "https://*.twitch.tv/embed/saltybet/chat?darkpopout"
    ],
    "js": [
      "js/twitch_chat.js"
    ],
    "run_at": "document_start",
    "all_frames": true
  }],
  "content_security_policy": "script-src 'self' 'wasm-eval'; object-src 'self'",
  "web_accessible_resources": [
    "js/*.wasm",
    "icons/eye.svg",
    "icons/eye-blocked.svg"
  ]
}
